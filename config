
# Server 0

server {
    listen  5000;
    server_name localhost;

    # Default Error Pages
    # error_page 404 /error_pages 404.html;
    error_page 500 502 503 504 /error_pages 50x.html;

    # Limit client body size
    client_max_body_size 100;

    # Root location
    location / {
        root /www;
        index index.html;
        autoindex off;  # Turn off directory listing
        allow_methods GET POST;  # Accepted HTTP methods
    }

    location /google {
        root /www;
        return 301 https://www.google.com;
        allow_methods GET
    }

    location /subpage {
        root /subpage;
        index index.html;
        autoindex on;  # Turn on directory listing
        allow_methods GET;
        error_page 404 /error_pages 404.html;

    }
    location /subpage/sub {
        root /subpage/sub2;
        index index.html;
        autoindex on;  # Turn on directory listing
        allow_methods GET;
        return 301 localhost::5000/subpage;
    }

    # Execute CGI for .php files
    location = /upload {
        root /cgi-bin;
        cgi_pass unix:/run/php/php7.4-fpm.sock;  # Adjust PHP version as needed
        cgi_index index.php;
        include fastcgi_params;
        cgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        cgi_param PATH_INFO $fastcgi_script_name;
    }
    location ~ \.php$ {
        root /cgi-bin;
        cgi_pass unix:/run/php/php7.4-fpm.sock;  # Adjust PHP version as needed
        cgi_index index.php;
        include fastcgi_params;
        cgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        cgi_param PATH_INFO $fastcgi_script_name;
    }
    location ~ \.py$ {
        root /cgi-bin;
        # root  /usr/lib;
        # fastcgi_pass  unix:/var/run/fcgiwrap.socket;
        cgi_index index.py;
        include fastcgi_params;
        cgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    }
}

server {
    listen  5000;
    listen  5050;
    server_name localhost2;

    # Default Error Pages
    # error_page 404 /error_pages 404.html;
    error_page 500 502 503 504 /error_pages 50x.html;

    # Limit client body size
    client_max_body_size 100;

    # Root location
    location / {
        root /www;
        error_page 404 /error_pages 404.html;
        index index.html;
        autoindex off;  # Turn off directory listing
        allow_methods GET POST;  # Accepted HTTP methods
    }

    location /subpage {
        root /subpage;
        index index.html;
        autoindex on;  # Turn on directory listing
        allow_methods GET;
        error_page 404 /error_pages 404.html;

    }
    location /subpage/sub {
        root /subpage/sub2;
        index index.html;
        autoindex on;  # Turn on directory listing
        allow_methods GET;


    }

    # Execute CGI for .php files
    location ~ \.php$ {
        cgi_pass unix:/run/php/php7.4-fpm.sock;  # Adjust PHP version as needed
        cgi_index index.php;
        include fastcgi_params;
        cgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        cgi_param PATH_INFO $fastcgi_script_name;
    }
}

# Server 1
server {
    listen 8080;
    server_name localhost tklimova;
    # return 301 https://www.google.com$request_uri;

    # Default Error Pages
    error_page 404 /error_pages 404.html;
    error_page 500 502 503 504 /error_pages 50x.html;

    # Limit client body size
    client_max_body_size 200;

 # Root location
    location / {
        root /www;
        error_page 404 /error_pages 404.html;
        autoindex on;  # Turn off directory listing
        allow_methods GET POST;  # Accepted HTTP methods
    }

    location /subpage {
        root /server/page2;
        index index.html;
        autoindex on;  # Turn on directory listing
        allow_methods GET;
    }
    location /upload {
        root /upload;
        # index index.html;
        autoindex on;  # Turn on directory listing
        allow_methods GET;
    }

    # Execute CGI for .php files
    location ~ \.php$ {
        cgi_pass unix:/run/php/php7.4-fpm.sock;  # Adjust PHP version as needed
        cgi_index index.php;
        include fastcgi_params;
        cgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        cgi_param PATH_INFO $fastcgi_script_name;
    }
}
